@{
    ViewData["Title"] = "تاريخ النقاط";
    Layout = "~/Views/Shared/_StrudentLayout.cshtml";
}
<div class="row justify-content-center">
    <div class="card h-100 mb-4 col-md-6">
        <div class="card-header pb-0 px-3">
            <div class="row">
                <div class="col-md-6">
                    <h4 class="mb-0">تاريخ النقاط</h4>
                </div>
            </div>
        </div>
        <div class="card-body pt-4 p-3">
            <ul class="list-group pe-0">
                @foreach(var item in @ViewBag.pointsLog)
                {
                    var isNegative = false;
                    var arrow = "up";
                    var outline = "success";
                    if(item.Amount < 0)
                    {
                        arrow = "down";
                        outline = "danger";
                    }
                    <li class="list-group-item border-0 d-flex justify-content-between px-0 mb-2 border-radius-lg">
                        <div class="d-flex align-items-center">
                            <button class="btn btn-icon-only btn-rounded btn-outline-@outline mb-0 me-2 ms-3 btn-sm d-flex align-items-center justify-content-center">
                                <i class="fas fa-arrow-@arrow"></i>
                            </button>
                            <div class="d-flex flex-column">
                                <h6 class="mb-1 text-dark text-sm">@item.Name</h6>
                                <span class="text-xs">@item.CreatedAt</span>
                            </div>
                        </div>
                        <div class="d-flex align-items-center text-@outline text-gradient text-sm font-weight-bold">
                         @item.Amount
                        </div>
                        
                    </li>
                }
            </ul>
        </div>
    </div>
</div>